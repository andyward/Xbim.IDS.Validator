<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ImplicitUsings>false</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.1</Version>
    <VersionSuffix>Beta</VersionSuffix>
    <Description>Enables validation of IFC models using BuildingSmart IDS</Description>
    <Copyright>xbim Ltd</Copyright>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
    <PackageTags>xbim ifc ids bim validation</PackageTags>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <PackageLicenseExpression>CDDL-1.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\Readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Xbim.Essentials" Version="6.0.414-develop" />
    <PackageReference Include="Xbim.InformationSpecifications" Version="0.3.32-xbim004" />
    <PackageReference Include="Xbim.IO.Esent" Version="6.0.414-develop" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Example.ids">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
