<?xml version="1.0" encoding="utf-8"?>
<ids:ids xmlns:xs="http://www.w3.org/2001/XMLSchema"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://standards.buildingsmart.org/IDS http://standards.buildingsmart.org/IDS/1.0/ids.xsd"
xmlns:ids="http://standards.buildingsmart.org/IDS">
  <ids:info>
    <ids:title>Required Spec without any requirement</ids:title>
    <ids:author>andy.ward@xbim.net</ids:author>
  </ids:info>
  <ids:specifications>
    <ids:specification ifcVersion="IFC2X3 IFC4" name="There must be a Invalid_Pset pset in the model">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:property>
          <ids:propertySet>
            <ids:simpleValue>Invalid_Pset</ids:simpleValue>
          </ids:propertySet>
          <ids:baseName>
            <xs:restriction>
              <xs:pattern value=".*" />
            </xs:restriction>
          </ids:baseName>
        </ids:property>
      </ids:applicability>
      <!-- No additional requirement. Presence of any matching PSet is enough -->
    </ids:specification>
  </ids:specifications>
</ids:ids>