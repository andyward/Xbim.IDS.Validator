<?xml version="1.0" encoding="utf-8"?>
<ids:ids xmlns:ids="http://standards.buildingsmart.org/IDS" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://standards.buildingsmart.org/IDS http://standards.buildingsmart.org/IDS/1.0/ids.xsd">
  <ids:info>
    <ids:title />
  </ids:info>
  <ids:specifications>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="There should be a Project Name">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="IFCPROJECT" />
            </xs:restriction>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:minLength value="1" />
              <xs:maxLength value="20" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="There should be a Site Name">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <ids:simpleValue>IFCSITE</ids:simpleValue>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:minLength value="1" />
              <xs:maxLength value="20" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="Are Levels Defined">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <ids:simpleValue>IFCBUILDINGSTOREY</ids:simpleValue>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:entity>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="IFCBUILDINGSTOREY" />
            </xs:restriction>
          </ids:name>
        </ids:entity>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:pattern value="[a-zA-Z0-9_ ]*" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="A Uniclass Classification System Exists">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="IFCCLASSIFICATION" />
            </xs:restriction>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Uniclass" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="Spaces are Defined">
      <ids:applicability minOccurs="1" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <ids:simpleValue>IFCSPACE</ids:simpleValue>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:entity>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="IFCSPACE" />
            </xs:restriction>
          </ids:name>
        </ids:entity>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:pattern value="\w*" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
    <ids:specification ifcVersion="IFC4 IFC4X3_ADD2" name="Doors are Named correctly" identifier="12.34">
      <ids:applicability minOccurs="0" maxOccurs="unbounded">
        <ids:entity>
          <ids:name>
            <ids:simpleValue>IFCDOOR</ids:simpleValue>
          </ids:name>
        </ids:entity>
      </ids:applicability>
      <ids:requirements>
        <ids:attribute>
          <ids:name>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Name" />
            </xs:restriction>
          </ids:name>
          <ids:value>
            <xs:restriction base="xs:string">
              <xs:pattern value="Doors_Int.*" />
            </xs:restriction>
          </ids:value>
        </ids:attribute>
      </ids:requirements>
    </ids:specification>
  </ids:specifications>
</ids:ids>